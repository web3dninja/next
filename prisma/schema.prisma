generator client {
  provider   = "prisma-client"
  output     = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  username String  @unique
  password String
  role     Role    @default(USER)

  @@map("users")
}

model Category {
  id       Int        @id @default(autoincrement())
  name     String
  slug     String     @unique
  icon     String?
  parentId Int?
  parent   Category?  @relation("CategoryTree", fields: [parentId], references: [id])
  children Category[] @relation("CategoryTree")
  products Product[]

  @@map("categories")
}

model Product {
  id            Int          @id @default(autoincrement())
  name          String
  slug          String?      @unique
  brand         String
  description   String
  price         String
  link          String
  image         String
  categoryId    Int?
  category      Category?    @relation(fields: [categoryId], references: [id])
  redditKeyword String
  redditStats   RedditStats? @relation(fields: [redditKeyword], references: [keyword])

  @@map("products")
}

model RedditStats {
  id            Int       @id @default(autoincrement())
  keyword       String    @unique
  products      Product[]
  mentions      Int       @default(0)
  positiveScore Int       @default(0)
  negativeScore Int       @default(0)
  rank          Int       @default(0)
  updatedAt     DateTime  @default(now()) @updatedAt

  @@map("reddit_stats")
}
